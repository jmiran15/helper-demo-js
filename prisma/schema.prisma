datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Action {
  id             String      @id @default(cuid())
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  probe          String?
  content        String?
  requiresParams Boolean?    @default(false)
  fetchUrl       String?
  inputSchema    Json?
  outputSchema   Json?
  method         HttpMethod?
}

enum HttpMethod {
  GET
  POST
  PUT
  DELETE
  PATCH
}
